<p id="notice"><%= notice %></p>
<h1>Mark all Attendances</h1>
<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <!--<th colspan="3"></th>-->
      <!--<th colspan="2"></th>-->
      <th>Present</th>
    </tr>
  </thead>
  <tbody>


    <% @students.each do |student| %>
      <tr>
        <td><%= student.id %></td>
        <td><%= student.name %></td>
        <td><%= student.email %></td>
        <td><%= student.role %></td>
        <% att = Attendance.new(date: Date.today(), slot: 2, faculty_id: current_user.id, subject_id: 2, student_id: student.id) %>
        <%#att.save%>
        <td><%= check_box_tag 'present' %></td>


      </tr>
    <% end %>
  </tbody>
</table>
<br>
