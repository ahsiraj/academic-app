<p id="notice"><%= notice %></p>
<h1>Attendances</h1>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Slot</th>
      <th>Faculty</th>
      <th>Subject</th>
      <th>Student</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @attendances.each do |attendance| %>
      <tr>
        <td><%= attendance.date %></td>
        <td><%= attendance.slot %></td>
        <td><%= attendance.faculty_id %></td>
        <td><%= attendance.subject_id %></td>
        <td><%= attendance.student_id %></td>
        <td><%= link_to 'Show', attendance %></td>
        <%# if attendance.faculty_id == current_user.id #just hiding only %>
        <td><%= link_to 'Edit', edit_attendance_path(attendance) %></td>
        <td><%= link_to 'Destroy', attendance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%# end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Attendance', new_attendance_path %>
<br>
<%= link_to 'Mark Full Class Attendance', attendances_mark_all_path %>
